<!-- app/views/apartments/edit.html.erb -->
<h1>Редактировать квартиру</h1>

<%= form_with model: @apartment, local: true do |form| %>
  <div class="form-group">
    <%= form.label :number, 'Номер' %>
    <%= form.number_field :number, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :floor, 'Этаж' %>
    <%= form.number_field :floor, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :number_of_rooms, 'Количество комнат' %>
    <%= form.number_field :number_of_rooms, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :area, 'Площадь (кв.м)' %>
    <%= form.number_field :area, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :price, 'Цена (руб)' %>
    <%= form.number_field :price, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :building_id, 'Здание' %>
    <%= form.collection_select :building_id, @buildings, :id, :name, prompt: 'Выберите здание', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.submit 'Сохранить', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Вернуться к списку квартир', apartments_path, class: 'btn btn-secondary' %>
