<!-- app/views/buildings/edit.html.erb -->
<h1>Редактировать здание</h1>

<%= form_with model: @building, local: true, html: { class: 'needs-validation' }, novalidate: true do |form| %>
  <div class="mb-3">
    <%= form.label :year_built, 'Год постройки', class: 'form-label' %>
    <%= form.number_field :year_built, class: 'form-control', required: true %>
    <div class="invalid-feedback">
      Пожалуйста, введите год постройки.
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :wall_material, 'Материал стен', class: 'form-label' %>
    <%= form.text_field :wall_material, class: 'form-control', required: true %>
    <div class="invalid-feedback">
      Пожалуйста, введите материал стен.
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :number_of_floors, 'Количество этажей', class: 'form-label' %>
    <%= form.number_field :number_of_floors, class: 'form-control', required: true %>
    <div class="invalid-feedback">
      Пожалуйста, введите количество этажей.
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :floor_type, 'Тип перекрытий', class: 'form-label' %>
    <%= form.text_field :floor_type, class: 'form-control', required: true %>
    <div class="invalid-feedback">
      Пожалуйста, введите тип перекрытий.
    </div>
  </div>

  <div class="mb-3 form-check">
    <%= form.label :gas, 'Газ', class: 'form-check-label' %>
    <%= form.check_box :gas, class: 'form-check-input' %>
  </div>

  <div class="mb-3">
    <%= form.label :number_of_entrances, 'Количество подъездов', class: 'form-label' %>
    <%= form.number_field :number_of_entrances, class: 'form-control', required: true %>
    <div class="invalid-feedback">
      Пожалуйста, введите количество подъездов.
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :number_of_apartments, 'Количество квартир', class: 'form-label' %>
    <%= form.number_field :number_of_apartments, class: 'form-control', required: true %>
    <div class="invalid-feedback">
      Пожалуйста, введите количество квартир.
    </div>
  </div>

  <div class="mb-3">
    <%= form.submit 'Сохранить', class: 'btn btn-primary' %>
    <%= link_to 'Вернуться к списку зданий', buildings_path, class: 'btn btn-secondary' %>
  </div>
<% end %>

<script>
  // JavaScript for disabling form submissions if there are invalid fields
  (function () {
    'use strict'

    // Fetch all the forms we want to apply custom Bootstrap validation styles to
    var forms = document.querySelectorAll('.needs-validation')

    // Loop over them and prevent submission
    Array.prototype.slice.call(forms)
      .forEach(function (form) {
        form.addEventListener('submit', function (event) {
          if (!form.checkValidity()) {
            event.preventDefault()
            event.stopPropagation()
          }

          form.classList.add('was-validated')
        }, false)
      })
  })()
</script>
